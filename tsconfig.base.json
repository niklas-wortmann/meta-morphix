{
	"compilerOptions": {
		"declaration": true,
		"declarationMap": true,
		"esModuleInterop": true,
		"target": "ES2022",
		"module": "ES2022",
		"moduleResolution": "Bundler",
		"noEmit": true,
		"outDir": "lib",
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"noImplicitAny": true,
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"noUnusedLocals": true
	},
	"exclude": ["**/*.test.ts"]
}
